{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}


<form method="post" class="container " style=" display:flex; justify-content: center; flex-direction: column;">
{% if error %}
        <div class="alert alert-danger" >{{ error.messageKey|trans(error.messageData, 'security') }}<div>
        {% endif %}
        {% if app.user %}
        <div class="nav-link link-body-emphasis px-2">Vous êtes connecté comme {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">se déconnecter</a></div>
        {% endif %}
  <div class="row mb-3 m-auto">
    <label for="colFormLabel" class="col-sm-6 col-form-label" >Adresse email</label>
    <div class="col-sm-6" >
      <input  type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus >
    </div>
  </div>
  <div class="row mb-3 m-auto">
    <label for="colFormLabel"  class="col-sm-6 col-form-label">Mot de passe</label>
    <div class="col-sm-6" >
      <input style = "float:left; width:250px;" type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
      <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
    </div>
  </div>
  <div class="row mb-3 m-auto">
    <div class="col-sm m-auto">
      <button  class="btn btn-dark mb-2 mx-2" type="submit">Connexion</button>
    </div>
  </div>
</form>

{% endblock %}
